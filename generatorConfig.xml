<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <!-- 数据库驱动-->    
    <classPathEntry  location="E:/java/maven/repository/mysql/mysql-connector-java/8.0.16/mysql-connector-java-8.0.16-sources.jar"/>    
  <context id="MySQL" targetRuntime="MyBatis3">
        <commentGenerator>    
            <property name="suppressDate" value="true"/>    
            <!-- 是否去除自动生成的注释 true：是 ： false:否 -->    
            <property name="suppressAllComments" value="true"/>    
        </commentGenerator>   
      <!--数据库链接URL，用户名、密码 -->
    <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver" connectionURL="jdbc:mysql://localhost:3306/eleme?serverTimezone=GMT%2B8&amp;nullCatalogMeansCurrent=true" userId="root" password=""/>
    <!--是否启用java.math.BigDecimal-->
        <javaTypeResolver>    
            <property name="forceBigDecimals" value="false"/>    
        </javaTypeResolver>    
    <!-- 生成模型的包名和位置-->    
    <javaModelGenerator targetPackage="com.example.eleme.pojo" targetProject="eleme/src/main/java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
    </javaModelGenerator>
    <!-- 生成DAO的包名和位置-->    
    <sqlMapGenerator targetPackage="com.example.eleme.mapping" targetProject="eleme/src/main/java">
            <property name="enableSubPackages" value="true" />
    </sqlMapGenerator>
    <!-- 生成映射文件的包名和位置-->    
    <javaClientGenerator targetPackage="com.example.eleme.dao" targetProject="eleme/src/main/java" type="XMLMAPPER">
        <property name="enableSubPackages" value="true" />
    </javaClientGenerator>
    <!-- 要生成的表 tableName是数据库中的表名或视图名 domainObjectName是实体类名-->    
    <table tableName="friends" domainObjectName="Friend" enableCountByExample="false" enableUpdateByExample="false" enableDeleteByExample="false" enableSelectByExample="false" selectByExampleQueryId="false">
        <property name="useActualColumnNames" value="true"/>
    </table>
  </context>
</generatorConfiguration>